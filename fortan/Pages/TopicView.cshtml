@page
@model fortan.Pages.TopicView

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>@Services.SelectedTopic.Title</title>
</head>
<body>
<div>
    <h1>@Services.SelectedTopic.Title</h1>

    <br>
    <br>
    @foreach (string comment in @Services.SelectedTopic.Comments)
    {
        <h5> Anonymous said: @comment </h5>
        <br>
        <br>
    }

    <form method="post">
        <br>
        <br>
        <textarea class="form-control" asp-for="Comment" rows="5" placeholder="Talk about the topic"></textarea>
        <br>
        <br>
        <input type="submit" class="btn btn-primary" value="Comment">
    </form>
</div>
</body>
</html>